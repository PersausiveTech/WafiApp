<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin10"
        app:cardCornerRadius="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_marginBottom="7dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/price_ok"
                android:padding="10dp"
                android:layout_gravity="end|right"
                android:src="@drawable/close"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:weightSum="2">
                <com.mobtecnica.wafiapps.customViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:text="Cart Total" />
                <com.mobtecnica.wafiapps.customViews.CustomTextView
                    android:id="@+id/card_price_value"
                    android:layout_width="wrap_content"
                    android:gravity="end"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TextView" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:orientation="vertical"
                android:id="@+id/price_layout"
                android:weightSum="2">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="15dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:weightSum="2">
                <com.mobtecnica.wafiapps.customViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/textColor_dark"
                    android:textSize="@dimen/large"
                    android:text="SUB TOTAL" />
                <com.mobtecnica.wafiapps.customViews.CustomTextView
                    android:id="@+id/sub_total_value"
                    android:layout_width="wrap_content"
                    android:gravity="end"
                    android:textSize="@dimen/large"
                    android:textColor="@color/textColor_dark"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TextView" />

            </LinearLayout>
            <!--<com.mobtecnica.wafiapps.customViews.CustomButton-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="OK"-->
                <!--android:id="@+id/price_ok"-->
                <!--android:layout_gravity="end"-->
                <!--android:background="@color/pureWhite"-->
                <!--android:textColor="@color/colorAccent"-->
                <!--style="?android:attr/borderlessButtonStyle"/>-->
        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>