<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="7dp"
    android:background="@color/pureWhite"
    android:orientation="horizontal">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_icon_list"
        android:layout_width="0dp"
        android:layout_height="@dimen/civ_list_group"
        android:layout_weight="1.5"
        android:padding="2dp"
        android:scaleType="centerInside" />

    <com.mobtecnica.wafiapps.customViews.CustomTextView
        android:id="@+id/listTitle"
        android:layout_width="0dp"
        android:layout_height="@dimen/tv_height_list_group"
        android:textColor="@color/textColor"
        android:layout_marginLeft="@dimen/tv_margin_left"
        android:layout_weight="7"
        android:gravity="center_vertical"
        android:padding="2dp"
        android:text="@string/app_name"
        android:fontFamily="sans-serif"
        android:textSize="@dimen/medium" />

    <ImageView
        android:id="@+id/iv_is_expanded"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:paddingTop="@dimen/margin10"
        android:paddingBottom="@dimen/margin10"
        android:layout_weight="1.5"
        android:padding="10dp" android:src="@mipmap/collaps" />


</LinearLayout>