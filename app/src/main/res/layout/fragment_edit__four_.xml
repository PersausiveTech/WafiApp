<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_background"
    android:clickable="true">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.75"
        android:scaleType="centerCrop"
        android:src="@drawable/wafi_pattern" />

    <ScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:fillViewport="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:weightSum="1">

            <ImageButton
                android:id="@+id/back4"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="left"
                android:layout_marginTop="20dp"
                android:background="@null"

                android:padding="30dp"
                android:src="@drawable/ic_arrow_back" />

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <com.mobtecnica.wafiapps.customViews.CustomTextView
                android:id="@+id/textview1060"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="When is your"
                android:textColor="@color/black"
                android:textSize="32dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.mobtecnica.wafiapps.customViews.CustomTextView
                    android:id="@+id/textview1061"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Birthday"
                    android:textColor="@color/black"
                    android:textSize="32dp"
                    android:textStyle="bold" />

                <com.mobtecnica.wafiapps.customViews.CustomTextView
                    android:id="@+id/textview1062"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="(Optional)"
                    android:textColor="@color/black"
                    android:textSize="18dp" />
            </LinearLayout>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="18dp" />

            <com.mobtecnica.wafiapps.customViews.CustomTextView
                android:id="@+id/textview1063"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="2dp"
                android:text="@string/birthday"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="40dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="beforeDescendants"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <com.mobtecnica.wafiapps.customViews.CustomTextView
                        android:id="@+id/edit_four_day"
                        android:layout_width="90dp"
                        android:layout_height="45dp"
                        android:background="@drawable/edittext_background"

                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <com.mobtecnica.wafiapps.customViews.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:text="Day"
                        android:textColor="@color/textColor"
                        android:textSize="14dp" />

                </LinearLayout>

                <com.mobtecnica.wafiapps.customViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="/"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <com.mobtecnica.wafiapps.customViews.CustomTextView
                        android:id="@+id/edit_four_month"
                        android:layout_width="90dp"
                        android:layout_height="45dp"
                        android:background="@drawable/edittext_background"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <com.mobtecnica.wafiapps.customViews.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:text="Month"
                        android:textColor="@color/textColor"
                        android:textSize="14dp" />

                </LinearLayout>

                <com.mobtecnica.wafiapps.customViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="/"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <com.mobtecnica.wafiapps.customViews.CustomTextView
                        android:id="@+id/edit_four_year"
                        android:layout_width="90dp"
                        android:layout_height="45dp"
                        android:background="@drawable/edittext_background"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <com.mobtecnica.wafiapps.customViews.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:text="Year"
                        android:textColor="@color/textColor"
                        android:textSize="14dp" />

                </LinearLayout>


                <!--<DatePicker-->
                <!--android:id="@+id/datePicker"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="45dp" />-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="bottom|right"
                android:orientation="vertical"
                android:padding="10dp">

                <com.mobtecnica.wafiapps.customViews.CustomButton
                    android:id="@+id/startshoppee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:background="@drawable/start_shopping"
                    android:text="Start Shopping"
                    android:textAllCaps="false"
                    android:textColor="@color/pureWhite"
                    android:textSize="18dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</FrameLayout>