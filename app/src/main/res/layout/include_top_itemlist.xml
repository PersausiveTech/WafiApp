<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        app:cardElevation="1dp"
        android:layout_margin="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"

                android:paddingLeft="15dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/laundry_new" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="vertical"
                    android:paddingLeft="10dp">

                    <com.mobtecnica.wafiapps.customViews.CustomTextView
                        android:id="@+id/tv_laundry_type"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Laundry Type : Premium"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/medium"
                 />

                    <com.mobtecnica.wafiapps.customViews.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Minimum Order Amount:BD 2.000"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/small" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical"
                android:padding="5dp">

                <com.mobtecnica.wafiapps.customViews.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin10"
                    android:lineSpacingExtra="3dp"
                    android:text="@string/not_sure_with_the_items_then_just_click_on_express_checkout_and_place_the_order_items_will_be_added_to_your_order_on_pickup"
                    android:textAlignment="center"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/small" />

                <com.mobtecnica.wafiapps.customViews.CustomButton
                    android:id="@+id/btn_express_checkout"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/margin10"
                    android:layout_marginRight="@dimen/margin10"
                    android:background="@drawable/btn_blue"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Express Checkout"
                    android:textSize="@dimen/medium"
                    android:textAllCaps="false"
                    android:textColor="@color/pureWhite" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>