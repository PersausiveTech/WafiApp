<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    >
    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/view6">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.mobtecnica.wafiapps.customViews.CustomTextView
                android:id="@+id/tvCardDetailsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/x_large"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Card Details"
                android:textColor="@color/textColor_dark"
                android:layout_margin="@dimen/margin10"
                android:textStyle="bold"
                />
            <com.mobtecnica.wafiapps.customViews.CustomTextView
                android:id="@+id/tvCardNumberLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/large"
                app:layout_constraintTop_toBottomOf="@+id/tvCardDetailsLabel"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Card Number"
                android:textColor="@color/textColor_dark"
                android:layout_marginHorizontal="@dimen/margin10"
                android:layout_marginTop="20dp"
                android:paddingStart="@dimen/margin10"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/etCardNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tvCardNumberLabel"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginHorizontal="10dp"
                android:background="@null"
                android:maxLines="1"
                android:hint="Card Number"
                android:textColor="@color/textColor"
                android:textSize="@dimen/large"
                android:layout_marginTop="5dp"
                android:padding="@dimen/margin10"
                android:digits="01234 56789"
                android:inputType="number"
                android:maxLength="19"
                />
            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/darkGray"
                app:layout_constraintTop_toBottomOf="@+id/etCardNumber"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="20dp"/>
            <com.mobtecnica.wafiapps.customViews.CustomTextView
                android:id="@+id/tvExpireLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/large"
                app:layout_constraintTop_toBottomOf="@+id/view1"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Expire Date"
                android:textColor="@color/textColor_dark"
                android:layout_marginHorizontal="@dimen/margin10"
                android:layout_marginTop="20dp"
                android:paddingStart="@dimen/margin10"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/etExpireDate"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tvExpireLabel"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginHorizontal="10dp"
                android:background="@null"
                android:maxLines="1"
                android:hint="MM/YY"
                android:textColor="@color/textColor"
                android:textSize="@dimen/large"
                android:layout_marginTop="5dp"
                android:padding="@dimen/margin10"
                android:gravity="start"
                android:inputType="number"
                android:maxLength="5"
                />
            <View
                android:id="@+id/view2"
                android:layout_width="90dp"
                android:layout_height="0.5dp"
                android:background="@color/darkGray"
                app:layout_constraintTop_toBottomOf="@+id/etExpireDate"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginHorizontal="20dp"/>
            <com.mobtecnica.wafiapps.customViews.CustomTextView
                android:id="@+id/tvSecurityLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/large"
                app:layout_constraintTop_toBottomOf="@+id/view1"
                app:layout_constraintStart_toStartOf="@+id/view3"
                android:text="Security Code"
                android:textColor="@color/textColor_dark"
                android:layout_marginHorizontal="@dimen/margin10"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:textStyle="bold"
                android:gravity="start"
                />
            <EditText
                android:id="@+id/etSecurityCode"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tvSecurityLabel"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@null"
                android:maxLines="1"
                android:hint="CVV"
                android:textColor="@color/textColor"
                android:textSize="@dimen/large"
                android:layout_marginTop="5dp"
                android:gravity="start"
                android:layout_marginEnd="30dp"
                android:paddingVertical="@dimen/margin10"
                android:inputType="number"
                android:maxLength="3"
                />
            <View
                android:id="@+id/view3"
                android:layout_width="90dp"
                android:layout_height="0.5dp"
                android:background="@color/darkGray"
                app:layout_constraintTop_toBottomOf="@+id/etSecurityCode"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="30dp"/>

            <com.mobtecnica.wafiapps.customViews.CustomTextView
                android:id="@+id/tvCardHolderNameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/large"
                app:layout_constraintTop_toBottomOf="@+id/view2"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Card Holder Name"
                android:textColor="@color/textColor_dark"
                android:layout_marginHorizontal="@dimen/margin10"
                android:layout_marginTop="20dp"
                android:paddingStart="@dimen/margin10"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/etCardHolderName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tvCardHolderNameLabel"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginHorizontal="10dp"
                android:background="@null"
                android:maxLines="1"
                android:hint="Name on card"
                android:textColor="@color/textColor"
                android:textSize="@dimen/large"
                android:layout_marginTop="5dp"
                android:padding="@dimen/margin10"
                android:inputType="textPersonName"
                />
            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/darkGray"
                app:layout_constraintTop_toBottomOf="@+id/etCardHolderName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="20dp"/>
            <View
                android:id="@+id/view5"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@color/filter_background"
                app:layout_constraintTop_toBottomOf="@+id/etCardHolderName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"/>

            <ImageView
                android:id="@+id/ivSecure"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view5"
                android:src="@drawable/secure"
                android:layout_marginTop="20dp"
                android:layout_marginStart="40dp"/>
            <com.mobtecnica.wafiapps.customViews.CustomTextView
                android:id="@+id/tv100percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/x_large"
                app:layout_constraintTop_toBottomOf="@+id/view5"
                app:layout_constraintStart_toEndOf="@+id/ivSecure"
                android:text="100% Secure"
                android:textColor="@color/darkRed"
                android:layout_marginHorizontal="@dimen/margin10"
                android:layout_marginTop="20dp"
                android:paddingStart="@dimen/margin10"
                />
            <com.mobtecnica.wafiapps.customViews.CustomTextView
                android:id="@+id/tvSecureBy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/medium"
                app:layout_constraintTop_toBottomOf="@+id/tv100percent"
                app:layout_constraintStart_toEndOf="@+id/ivSecure"
                android:text="Secure by 128 bit SSL encryption"
                android:textColor="@color/textColor_dark"
                android:layout_marginHorizontal="@dimen/margin10"
                android:layout_marginTop="5dp"
                android:paddingStart="@dimen/margin10"
                />
            <ImageView
                android:id="@+id/ivLike"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivSecure"
                android:src="@drawable/like"
                android:layout_marginTop="20dp"
                android:layout_marginStart="40dp"/>
            <com.mobtecnica.wafiapps.customViews.CustomTextView
                android:id="@+id/tvTrusted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/x_large"
                app:layout_constraintTop_toBottomOf="@+id/ivSecure"
                app:layout_constraintStart_toEndOf="@+id/ivLike"
                android:text="Trusted Gateway"
                android:textColor="@color/darkRed"
                android:layout_marginHorizontal="@dimen/margin10"
                android:layout_marginTop="20dp"
                android:paddingStart="@dimen/margin10"
                />
            <com.mobtecnica.wafiapps.customViews.CustomTextView
                android:id="@+id/tvDataLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/medium"
                app:layout_constraintTop_toBottomOf="@+id/tvTrusted"
                app:layout_constraintStart_toEndOf="@+id/ivLike"
                android:text="Card data not stored"
                android:textColor="@color/textColor_dark"
                android:layout_marginHorizontal="@dimen/margin10"
                android:layout_marginTop="5dp"
                android:paddingStart="@dimen/margin10"
                />
            <ImageView
                android:id="@+id/ivVisa"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivLike"
                android:src="@drawable/payment"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

    <View
        android:id="@+id/view6"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/filter_background"
        app:layout_constraintBottom_toTopOf="@+id/view7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"/>

    <View
        android:id="@+id/view7"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/darkGray"
        app:layout_constraintBottom_toTopOf="@+id/tvSubTotalLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="30dp"/>
    <com.mobtecnica.wafiapps.customViews.CustomTextView
        android:id="@+id/tvSubTotalLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="@dimen/large"
        app:layout_constraintBottom_toTopOf="@+id/tvSubTotal"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Sub Total:"
        android:textColor="@color/textColor_dark"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        />
    <com.mobtecnica.wafiapps.customViews.CustomTextView
        android:id="@+id/tvSubTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="@dimen/x_large"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="BD 1.92"
        android:textColor="@color/textColor_dark"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        />
    <com.mobtecnica.wafiapps.customViews.CustomTextView
        android:id="@+id/tvContinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/darkRed"
        android:text="Continue"
        android:textColor="@color/pureWhite"
        android:textAllCaps="true"
        android:paddingHorizontal="50dp"
        android:paddingVertical="@dimen/margin10"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textStyle="bold"
        />
</android.support.constraint.ConstraintLayout>