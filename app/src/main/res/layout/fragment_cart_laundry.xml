<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_cart_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pureWhite"
    android:clickable="true"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:cardElevation="5dp">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/laundryAppBar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:src="@drawable/ic_arrow_back_white_24dp" />

                <com.mobtecnica.wafiapps.customViews.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv_delete"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:gravity="left|center_vertical"
                    android:text="@string/cart"
                    android:paddingLeft="10dp"
                    android:textColor="@color/pureWhite"
                    android:textSize="17sp"
                     />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right">

                    <ImageView
                        android:id="@+id/iv_delete"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="7dp"
                        android:layout_marginRight="7dp"
                        android:layout_toLeftOf="@+id/rl_cart"
                        android:layout_toStartOf="@+id/rl_cart"
                        android:padding="2dp"
                        android:src="@drawable/ic_delete_white_24dp" />

                    <RelativeLayout
                        android:id="@+id/rl_cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="14dp"
                        android:layout_marginRight="14dp">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:padding="2dp"
                            android:src="@mipmap/cart_home"
                            android:visibility="gone" />

                        <com.mobtecnica.wafiapps.customViews.CustomTextView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/round_yellow"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:visibility="gone" />


                    </RelativeLayout>


                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.Toolbar>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_cart_laundry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_bottom"
        android:layout_below="@+id/toolbar"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="5dp"></android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/laundryAppBar"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="@color/pureWhite"
            android:gravity="center"
            android:paddingBottom="7dp"
            android:paddingTop="4dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <com.mobtecnica.wafiapps.customViews.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:text="Sub Total: "
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/small" />

                <com.mobtecnica.wafiapps.customViews.CustomTextView
                    android:id="@+id/tv_total_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="BD 00.00 "
                    android:textColor="@color/textColor"

                    android:textSize="@dimen/large" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="@color/pureWhite"
            android:gravity="right">

            <com.mobtecnica.wafiapps.customViews.CustomButton
                android:id="@+id/check_out"
                android:layout_width="@dimen/button_width_checkout"
                android:layout_height="wrap_content"
                android:layout_marginRight="13dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/btn_blue"
                android:padding="10dp"
                android:text="@string/check_out"
                android:textColor="@color/pureWhite"
                android:textSize="14sp" />

            />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>