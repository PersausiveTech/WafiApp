<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        app:cardElevation="2dp"
        android:layout_margin="2dp"
        app:cardCornerRadius="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:orientation="horizontal">

                <View
                    android:layout_width="5dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/laundryAppBar"
                    android:minHeight="40dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin10"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="@dimen/margin10"
                    android:layout_marginTop="@dimen/margin10">

                    <ImageView
                        android:id="@+id/iv_product_image_laundry"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:scaleType="centerInside" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin10"
                    android:layout_marginTop="@dimen/margin10"
                    android:orientation="vertical">

                    <com.mobtecnica.wafiapps.customViews.CustomTextView
                        android:id="@+id/product_name_laundry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:gravity="center_vertical"
                        android:text="Shirt"
                        android:textAllCaps="true"
                        android:textColor="@color/textColor"
                        android:textSize="14sp"
                        />

                    <com.mobtecnica.wafiapps.customViews.CustomTextView
                        android:id="@+id/wash_type_laundry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="Dry Clean"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textColor="@color/textColor"
                        android:textSize="12sp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:visibility="gone">

                        <com.mobtecnica.wafiapps.customViews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Color "
                            android:textColor="@color/textColor"

                            android:textSize="14dp" />

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp" />
                    </LinearLayout>

                    <com.mobtecnica.wafiapps.customViews.CustomTextView
                        android:id="@+id/tv_price_laundry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:background="#e6e5e5"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:minHeight="35dp"
                        android:paddingLeft="@dimen/margin10"
                        android:paddingRight="@dimen/margin10"

                        android:text="BD 220.00"
                        android:textColor="@color/textColor"
                        android:textSize="14sp" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e9e8e8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:minHeight="40dp"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <com.mobtecnica.wafiapps.customViews.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical"
                        android:text="Qty :"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/medium" />

                    <ImageView
                        android:id="@+id/iv_minus"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="3dp"
                        android:src="@drawable/minus_image"
                        android:visibility="gone" />


                    <com.mobtecnica.wafiapps.customViews.CustomEditText
                        android:id="@+id/et_quantity"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:cursorVisible="false"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:minHeight="35dp"
                        android:minWidth="35dp"
                        android:text="1"
                        android:textColor="@color/textColor"
                        android:textSize="14sp"
                         />

                    <ImageView
                        android:id="@+id/iv_plus"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="3dp"
                        android:src="@drawable/plus_image"
                        android:visibility="gone" />


                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#e9e8e8" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:clickable="true"
                    android:id="@+id/remove_from_cart"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/cb_wishlist_select_laundry"
                        android:layout_width="wrap_content"
                        android:scaleX="0.60"
                        android:scaleY="0.60"
                        android:duplicateParentState="true"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:button="@drawable/bg_checkbox"
                        android:checked="false"/>

                    <com.mobtecnica.wafiapps.customViews.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Remove" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>