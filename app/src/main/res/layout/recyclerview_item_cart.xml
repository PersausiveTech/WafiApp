<?xml version="1.0" encoding="utf-8"?>


    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/card_margin"
        android:layout_marginLeft="@dimen/card_margin"
        android:layout_marginRight="@dimen/card_margin"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardPreventCornerOverlap="false"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:id="@+id/layout_cart_item"
            android:orientation="horizontal"
            android:padding="10dp">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:button="@drawable/bg_checkbox"
                android:checked="false"
                android:visibility="gone"
                android:gravity="center" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <ImageView
                    android:id="@+id/iv_product_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="centerInside" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.mobtecnica.wafiapps.customViews.CustomTextView
                        android:id="@+id/product_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingBottom="8dp"
                        android:lines="1"
                        android:lineSpacingExtra="2dp"
                        android:textColor="@color/textColor"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/iv_delete_cart_item"
                        android:layout_width="wrap_content"
                        android:padding="5dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/delete_2" />
                </LinearLayout>

                <com.mobtecnica.wafiapps.customViews.CustomTextView
                    android:id="@+id/product_spec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="2dp"
                    android:fontFamily="sans-serif"
                    android:text="Samsung S7 edge -32 gb"
                    android:textColor="@color/textColor"
                    android:textSize="11sp" />

                <com.mobtecnica.wafiapps.customViews.CustomTextView
                    android:id="@+id/vendor_name"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="sans-serif"
                    android:text="Vendor : Wafi connect"
                    android:textColor="@color/textColor"
                    android:textSize="11sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:padding="1dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.mobtecnica.wafiapps.customViews.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:text="Qty" />

                    <ImageView
                        android:id="@+id/iv_minus_"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="20dp"
                        android:minWidth="20dp"
                        android:padding="2dp"
                        android:src="@drawable/ic_remove_black_24dp"
                        android:tint="@color/textColor" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#e4e3e3" />

                    <com.mobtecnica.wafiapps.customViews.CustomEditText
                        android:id="@+id/et_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:cursorVisible="false"
                        android:enabled="false"
                        android:inputType="none"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:minHeight="20dp"
                        android:minWidth="20dp"
                        android:text="1"
                        android:textColor="@color/textColor"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#e4e3e3" />

                    <ImageView
                        android:id="@+id/iv_plus_"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="20dp"
                        android:minWidth="20dp"
                        android:padding="2dp"
                        android:src="@drawable/ic_add_black_24dp"
                        android:tint="@color/textColor" />

                    <com.mobtecnica.wafiapps.customViews.CustomTextView
                        android:id="@+id/tv_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:fontFamily="sans-serif"
                        android:gravity="right"
                        android:paddingRight="5dp"
                        android:text="BD 220.00"
                        android:textColor="@color/textColor"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:visibility="gone">

                    <com.mobtecnica.wafiapps.customViews.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Color "
                        android:textSize="13dp" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


