<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@color/pureWhite"
    android:orientation="vertical">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_address"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">
    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/nodata"
        android:orientation="vertical"
        android:visibility="gone"
        android:gravity="center">
        <com.mobtecnica.wafiapps.customViews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/no_address_found"
            android:textColor="@color/textColor"
            android:textSize="24sp" />
        <com.mobtecnica.wafiapps.customViews.CustomButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/red_btn_login"
            android:layout_margin="8dp"
            android:text="@string/add_address"
            android:id="@+id/address_add"
            android:textColor="@color/pureWhite"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"/>
    </LinearLayout>
</RelativeLayout>