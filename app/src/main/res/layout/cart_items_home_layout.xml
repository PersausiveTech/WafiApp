<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:elevation="2dp"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_margin="4dp"
            android:orientation="horizontal"
            android:background="@null"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.5">

                <ImageView
                    android:id="@+id/img_cart_home"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:scaleType="fitCenter" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="6.5"
                android:gravity="center"
                android:orientation="vertical">

                <com.mobtecnica.wafiapps.customViews.CustomTextView
                    android:id="@+id/cart_item_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:padding="4dp"
                    android:textSize="@dimen/medium" />

                <com.mobtecnica.wafiapps.customViews.CustomTextView
                    android:id="@+id/cart_item_qty"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:padding="4dp"
                    android:textSize="@dimen/x_small" />

                <com.mobtecnica.wafiapps.customViews.CustomTextView
                    android:id="@+id/discount_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:textColor="@color/blue_btn_bg_color"
                    android:textSize="@dimen/medium" />

                <com.mobtecnica.wafiapps.customViews.CustomButton
                    android:id="@+id/btn_proceed"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/red_btn_login"
                    android:text="@string/proceed_to_checkout"
                    android:textAllCaps="false"
                    android:textColor="@color/pureWhite"
                    android:textSize="@dimen/medium" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>