<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_home_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/l_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="45dp"
            android:layout_height="35dp"
            android:layout_gravity="start"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_arrow_back_white_24dp" />

        <!--<android.support.v4.widget.Space-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0dp"-->
        <!--android:layout_weight="3" />-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical"
            android:padding="30dp">

            <com.mobtecnica.wafiapps.customViews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/laundry_"
                android:textColor="@color/pureWhite"
                android:textColorHighlight="@color/pureWhite"
                android:textSize="50sp" />

            <com.mobtecnica.wafiapps.customViews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/done"
                android:textColor="@color/pureWhite"
                android:textColorHighlight="@color/pureWhite"
                android:textSize="17sp" />
        </LinearLayout>


        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:orientation="horizontal">


            <RelativeLayout
                android:id="@+id/ll_standard_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="2dp">

                <com.mobtecnica.wafiapps.customViews.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/white_box"
                    android:gravity="center"
                    android:minHeight="70dp"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:text="@string/standard_service"
                    android:textColor="@color/pureWhite"
                    android:textSize="14sp" />

                <com.mobtecnica.wafiapps.customViews.CustomButton
                    android:id="@+id/btn_standard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    android:background="#fff"
                    android:gravity="center"
                    android:minHeight="40dp"
                    android:minWidth="70dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:text="@string/order_now"
                    android:textColor="@color/black"
                    android:textSize="@dimen/small" />

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:orientation="horizontal">


            <RelativeLayout
                android:id="@+id/ll_premium_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="2dp">

                <com.mobtecnica.wafiapps.customViews.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/white_box"
                    android:gravity="center"
                    android:minHeight="70dp"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:text="@string/premium_service"
                    android:textColor="@color/pureWhite"
                    android:textSize="14sp" />

                <com.mobtecnica.wafiapps.customViews.CustomButton
                    android:id="@+id/btn_premium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    android:background="#fff"
                    android:gravity="center"
                    android:minHeight="40dp"
                    android:minWidth="70dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:text="@string/coming_soon"
                    android:textColor="@color/black"
                    android:textSize="@dimen/small" />

            </RelativeLayout>


        </LinearLayout>


        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/round_white" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:background="#eaeaea" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="2dp">

            <com.mobtecnica.wafiapps.customViews.CustomButton
                android:id="@+id/btn_pricelist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/price_list"
                android:textColor="@color/pureWhite" />

        </LinearLayout>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

</RelativeLayout>
