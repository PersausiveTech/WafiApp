<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightRedBackground"
    android:clickable="true"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:cardElevation="5dp">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/laundryAppBar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_back_checkout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:src="@drawable/ic_arrow_back_white_24dp" />

                <com.mobtecnica.wafiapps.customViews.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv_delete"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:text="@string/checkout"
                    android:textColor="@color/pureWhite"
                    android:textSize="17sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right">

                    <ImageView
                        android:id="@+id/iv_delete"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="7dp"
                        android:layout_marginRight="7dp"
                        android:layout_toLeftOf="@+id/rl_cart"
                        android:layout_toStartOf="@+id/rl_cart"
                        android:padding="2dp"
                        android:src="@drawable/ic_delete_white_24dp"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:id="@+id/rl_cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="14dp"
                        android:layout_marginRight="14dp">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:padding="2dp"
                            android:src="@mipmap/cart_home"
                            android:visibility="gone" />

                        <com.mobtecnica.wafiapps.customViews.CustomTextView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/round_yellow"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:visibility="gone" />


                    </RelativeLayout>


                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.Toolbar>


    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/ll_bottom"
            android:orientation="vertical">
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/margin10"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:paddingLeft="@dimen/margin10"
                android:paddingRight="@dimen/margin10">



                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="15dp"
                    android:paddingBottom="10dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.mobtecnica.wafiapps.customViews.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:padding="10dp"
                            android:text="Delivery Address/ Details"
                            android:textAllCaps="true"
                            android:textColor="@color/textColor"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin10"
                            android:background="@drawable/white_background"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                                android:id="@+id/spinner_select_area"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/white_background"
                                android:dropDownSelector="@drawable/ic_keyboard_arrow_right_white_24dp"
                                android:gravity="left"
                                android:minHeight="40dp"
                                app:hintText="Select Area" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_keyboard_arrow_right_white_24dp"
                                android:tint="@color/textColor" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin10"
                            android:background="@drawable/white_background"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                                android:id="@+id/spinner_change_address"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:background="@drawable/white_background"
                                android:gravity="center"
                                app:hintText="Select Address" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_keyboard_arrow_right_white_24dp"
                                android:tint="@color/textColor" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="10dp"
                            android:paddingRight="@dimen/margin10">

                            <com.mobtecnica.wafiapps.customViews.CustomEditText
                                android:id="@+id/tv_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:background="@drawable/gray_background"
                                android:gravity="center_vertical"
                                android:hint="Enter Name"
                                android:minHeight="40dp"
                                android:paddingLeft="@dimen/margin10"
                                android:singleLine="true"
                                android:textColor="@color/textColor"
                                android:textColorHint="@color/textColor"
                                android:textSize="14sp" />

                            <com.mobtecnica.wafiapps.customViews.CustomEditText
                                android:id="@+id/tv_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:background="@drawable/gray_background"
                                android:gravity="center_vertical"
                                android:hint="Email"
                                android:minHeight="40dp"
                                android:paddingLeft="@dimen/margin10"
                                android:singleLine="true"
                                android:textColor="@color/textColor"
                                android:textColorHint="@color/textColor"
                                android:textSize="14sp" />

                            <com.mobtecnica.wafiapps.customViews.CustomEditText
                                android:id="@+id/tv_mobile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:background="@drawable/gray_background"
                                android:gravity="center_vertical"
                                android:hint="Mobile No"
                                android:minHeight="40dp"
                                android:paddingLeft="@dimen/margin10"
                                android:singleLine="true"
                                android:textColor="@color/textColor"
                                android:textColorHint="@color/textColor"
                                android:textSize="14sp" />

                            <com.mobtecnica.wafiapps.customViews.CustomEditText
                                android:id="@+id/tv_flat_num"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:background="@drawable/gray_background"
                                android:gravity="center_vertical"
                                android:hint=" Flat No / Villa No / Office No"
                                android:minHeight="40dp"
                                android:paddingLeft="@dimen/margin10"
                                android:singleLine="true"
                                android:textColor="@color/textColor"
                                android:textColorHint="@color/textColor"
                                android:textSize="14sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <com.mobtecnica.wafiapps.customViews.CustomEditText
                                    android:id="@+id/tv_building_num"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/gray_background"
                                    android:gravity="center_vertical"
                                    android:hint="Building No"
                                    android:minHeight="40dp"
                                    android:paddingLeft="@dimen/margin10"
                                    android:singleLine="true"
                                    android:textColor="@color/textColor"
                                    android:textColorHint="@color/textColor"
                                    android:textSize="14sp" />

                                <com.mobtecnica.wafiapps.customViews.CustomEditText
                                    android:id="@+id/tv_road_num"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/gray_background"
                                    android:gravity="center_vertical"
                                    android:hint="Road"
                                    android:minHeight="40dp"
                                    android:paddingLeft="@dimen/margin10"
                                    android:singleLine="true"
                                    android:textColor="@color/textColor"
                                    android:textColorHint="@color/textColor"
                                    android:textSize="14sp" />
                            </LinearLayout>


                            <com.mobtecnica.wafiapps.customViews.CustomEditText
                                android:id="@+id/tv_block"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:background="@drawable/gray_background"
                                android:gravity="center_vertical"
                                android:hint="Block"
                                android:minHeight="40dp"
                                android:paddingLeft="@dimen/margin10"
                                android:singleLine="true"
                                android:textColor="@color/textColor"
                                android:textColorHint="@color/textColor"
                                android:textSize="14sp" />

                            <com.mobtecnica.wafiapps.customViews.CustomEditText
                                android:id="@+id/land_mark"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:background="@drawable/gray_background"
                                android:gravity="center_vertical"
                                android:hint="Land Mark"
                                android:minHeight="40dp"
                                android:paddingLeft="@dimen/margin10"
                                android:singleLine="true"
                                android:textColor="@color/textColor"
                                android:textColorHint="@color/textColor"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="15dp"
                    android:paddingBottom="10dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.mobtecnica.wafiapps.customViews.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="left"
                            android:lineSpacingExtra="3dp"
                            android:padding="10dp"
                            android:text="Please choose a Pickup and Delivery Time"
                            android:textAllCaps="true"
                            android:textColor="@color/textColor"
                            android:textSize="14sp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="@dimen/margin10"
                            android:background="@drawable/box_border"
                            android:orientation="vertical">

                            <com.mobtecnica.wafiapps.customViews.CustomTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif"
                                android:gravity="center"
                                android:minHeight="35dp"
                                android:text="Please pick my laundry"
                                android:textAllCaps="true"
                                android:textColor="@color/textColor"
                                android:textSize="12sp" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <android.support.design.widget.FloatingActionButton
                                    android:id="@+id/datepicker_laundry_pickup"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerHorizontal="true"
                                    android:src="@drawable/calendar"
                                    android:tint="@color/pureWhite"
                                    app:backgroundTint="@color/laundryAppBar"
                                    app:fabSize="auto" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="25dp"
                                    android:background="#eeeeee"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:paddingBottom="10dp"
                                    android:paddingTop="30dp">

                                    <com.mobtecnica.wafiapps.customViews.CustomTextView
                                        android:id="@+id/tv_pickup_day"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="Day"
                                        android:textAllCaps="true"
                                        android:textColor="@color/textColor"
                                        android:textSize="14sp" />

                                    <com.mobtecnica.wafiapps.customViews.CustomTextView
                                        android:id="@+id/tv_pickup_date"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:gravity="center"
                                        android:paddingTop="3dp"
                                        android:text="Date"
                                        android:textColor="@color/textColor"
                                        android:textSize="12sp" />

                                    <RadioGroup

                                        android:id="@+id/ll_pickup_time"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:dividerPadding="@dimen/margin10"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                    </RadioGroup>

                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="@dimen/margin10"
                            android:background="@drawable/box_border"
                            android:orientation="vertical">

                            <com.mobtecnica.wafiapps.customViews.CustomTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif"
                                android:gravity="center"
                                android:minHeight="35dp"
                                android:text="Please deliver my laundry"
                                android:textAllCaps="true"
                                android:textColor="@color/textColor"
                                android:textSize="12sp" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <android.support.design.widget.FloatingActionButton
                                    android:id="@+id/datepicker_laundry_deliver"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerHorizontal="true"
                                    android:src="@drawable/calendar"
                                    android:tint="@color/pureWhite"
                                    app:backgroundTint="@color/laundryAppBar"
                                    app:fabSize="auto" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="25dp"
                                    android:background="#eeeeee"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:paddingBottom="10dp"
                                    android:paddingTop="30dp">

                                    <com.mobtecnica.wafiapps.customViews.CustomTextView
                                        android:id="@+id/tv_deliver_day"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:paddingTop="3dp"
                                        android:text="Day"
                                        android:textAllCaps="true"
                                        android:textColor="@color/textColor"
                                        android:textSize="14sp" />

                                    <com.mobtecnica.wafiapps.customViews.CustomTextView
                                        android:id="@+id/tv_deliver_date"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:gravity="center"
                                        android:text="Date"
                                        android:textColor="@color/textColor"
                                        android:textSize="12sp" />

                                    <RadioGroup
                                        android:id="@+id/ll_deliver_time"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                    </RadioGroup>

                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="15dp"
                    android:paddingBottom="10dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.mobtecnica.wafiapps.customViews.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:padding="10dp"
                            android:text="Order summery"
                            android:textAllCaps="true"
                            android:textColor="@color/textColor"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:id="@+id/ll_order_summery_hide"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#21306e">


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin10"
                                android:layout_marginRight="@dimen/margin10"
                                android:background="@drawable/gray_background"
                                android:minHeight="40dp"
                                android:orientation="horizontal">

                                <com.mobtecnica.wafiapps.customViews.CustomTextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="Item"
                                    android:textColor="@color/textColor"
                                    android:textSize="12sp"

                                    android:textStyle="bold" />

                                <com.mobtecnica.wafiapps.customViews.CustomTextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="Qty"
                                    android:textColor="@color/textColor"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                                <com.mobtecnica.wafiapps.customViews.CustomTextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="Service"
                                    android:textColor="@color/textColor"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                                <com.mobtecnica.wafiapps.customViews.CustomTextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="Amt(BD)"
                                    android:textColor="@color/textColor"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_order_summery"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                            </LinearLayout>

                            <com.mobtecnica.wafiapps.customViews.CustomTextView
                                android:id="@+id/tv_subtotal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:gravity="center_vertical|right"
                                android:minHeight="40dp"
                                android:text="Subtotal :"
                                android:textColor="@color/textColor"
                                android:textStyle="bold" />

                            <com.mobtecnica.wafiapps.customViews.CustomTextView
                                android:id="@+id/tv_discount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:gravity="center_vertical|right"
                                android:minHeight="40dp"
                                android:text="Discount (50.00%) :" />

                            <com.mobtecnica.wafiapps.customViews.CustomTextView
                                android:id="@+id/tv_delivery_charge"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:gravity="center_vertical|right"
                                android:minHeight="40dp"
                                android:text="Delivery Charge(BD) :" />

                            <com.mobtecnica.wafiapps.customViews.CustomTextView
                                android:id="@+id/tv_amount_payable"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:gravity="center_vertical|right"
                                android:minHeight="40dp"
                                android:text="Amount Payable :"
                                android:textColor="@color/textColor"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="15dp"
                    android:paddingBottom="10dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.mobtecnica.wafiapps.customViews.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:padding="10dp"
                            android:text="Payment Method"
                            android:textAllCaps="true"
                            android:textColor="@color/textColor"
                            android:textSize="14sp" />

                        <RadioGroup
                            android:id="@+id/radio_group_payment_selection"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <RadioButton
                                android:id="@+id/cash_on_delivery"
