<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="@dimen/card_margin"
    android:layout_marginLeft="@dimen/card_margin"
    android:layout_marginRight="@dimen/card_margin"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardPreventCornerOverlap="false">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/img_product"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignBottom="@id/list_view"
            android:layout_alignTop="@id/list_view"
            android:layout_alignLeft="@+id/grid_view"
            android:layout_alignRight="@+id/grid_view"
            android:padding="5dp"
            android:src="@mipmap/ic_launcher" />
        <com.mobtecnica.wafiapps.customViews.CustomTextView
            android:id="@+id/offer_tag_text"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/round_green"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:textSize="@dimen/small"
            android:paddingRight="8dp"
            android:text="45%"
            android:textStyle="bold"
            android:textColor="@color/pureWhite"
            android:layout_alignParentLeft="true"/>

        <LinearLayout
            android:id="@+id/grid_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/img_product"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">


            <RatingBar
                android:id="@+id/rating_in_grid"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:numStars="5" />

            <com.mobtecnica.wafiapps.customViews.CustomTextView
                android:id="@+id/tv_product_name_in_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:maxLines="2"
                android:minHeight="20dp"
                android:singleLine="true"
                android:textAlignment="center"
                android:textSize="@dimen/medium"
                android:textColor="@color/product_text"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:gravity="center"
                android:minHeight="20dp">

                <com.mobtecnica.wafiapps.customViews.CustomTextView
                    android:id="@+id/tv_product_price_in_grid"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:textColor="@color/blue_btn_bg_color"
                    android:textSize="@dimen/medium"
                    android:textStyle="bold" />

                <com.mobtecnica.wafiapps.customViews.CustomTextView
                    android:id="@+id/tv_product_old_price_in_grid"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="13sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/tw__blue_pressed_light" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:minHeight="20dp"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/iv_share_in_grid"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/share" />

                <ImageView
                    android:id="@+id/iv_add_to_wishlist_in_grid"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/favourite" />
            </LinearLayout>

            <com.mobtecnica.wafiapps.customViews.CustomButton
                android:id="@+id/tv_add_to_cart_in_grid"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/red_btn_login"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:text="@string/add_to_cart"
                android:textColor="@color/pureWhite"
                android:textSize="@dimen/medium"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/img_product"
            android:gravity="left"
            android:orientation="vertical"
            android:visibility="visible">

            <!-- <LinearLayout
                 android:layout_width="match_parent"
                 android:visibility="gone"
                 android:layout_height="wrap_content"
                 android:layout_margin="3dp"
                 android:gravity="right">

                 <ImageView
                     android:id="@+id/iv_add_to_wishlist_in_list"
                     android:layout_width="45dp"
                     android:layout_height="45dp"
                     android:padding="10dp"
                     android:src="@drawable/favourite" />
             </LinearLayout>
 -->
            <com.mobtecnica.wafiapps.customViews.CustomTextView
                android:id="@+id/tv_product_name_in_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="start"
                android:maxLines="2"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:singleLine="true"
                android:textAlignment="gravity"
                android:textSize="@dimen/medium"
                android:textColor="@color/product_text"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/rating_in_list"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:paddingBottom="1dp"
                android:paddingTop="1dp">

                <com.mobtecnica.wafiapps.customViews.CustomTextView
                    android:id="@+id/tv_product_price_in_list"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.97"
                    android:gravity="left"
                    android:textColor="@color/blue_btn_bg_color"
                    android:textSize="@dimen/medium"
                    android:textStyle="bold" />

                <com.mobtecnica.wafiapps.customViews.CustomTextView
                    android:id="@+id/tv_product_old_price_in_list"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <com.mobtecnica.wafiapps.customViews.CustomButton
                    android:id="@+id/tv_add_to_cart_in_list"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/red_btn_login"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:text="@string/add_to_cart"
                    android:textColor="@color/pureWhite"
                    android:textSize="11dp" />

                <ImageView
                    android:id="@+id/iv_add_to_wishlist_in_list"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:padding="10dp"
                    android:src="@drawable/favourite" />
                <ImageView
                    android:id="@+id/iv_share_in_list"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:src="@drawable/share" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/llNoStockData"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:background="@color/transparent_grey"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/ivSoldOut"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/sold_out" />
</FrameLayout>

</android.support.v7.widget.CardView>