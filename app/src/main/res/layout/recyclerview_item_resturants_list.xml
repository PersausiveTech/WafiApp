<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="7dp"
        android:padding="1dp"
        android:background="@drawable/eats_box"
        android:orientation="vertical"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="@dimen/margin10"
                android:paddingTop="@dimen/margin10"
                android:paddingBottom="@dimen/margin10"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_is_open"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerInside" />

                    <com.mobtecnica.wafiapps.customViews.CustomTextView
                        android:id="@+id/tv_is_open"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Open"
                        android:textSize="16sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_resturant_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:scaleType="centerInside" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:paddingBottom="@dimen/margin10"
                android:paddingTop="@dimen/margin10"
                android:orientation="vertical">

                <com.mobtecnica.wafiapps.customViews.CustomTextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="Name"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.mobtecnica.wafiapps.customViews.CustomTextView
                    android:id="@+id/tv_min_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:gravity="center_vertical"
                    android:minHeight="25dp"
                    android:text="Min Order"
                    android:textSize="12sp"
                    android:textStyle="normal" />

                <com.mobtecnica.wafiapps.customViews.CustomTextView
                    android:id="@+id/tv_delivery_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:gravity="center_vertical"
                    android:minHeight="25dp"
                    android:text="Delivery Time"
                    android:textSize="12sp"
                    android:textStyle="normal" />

                <com.mobtecnica.wafiapps.customViews.CustomTextView
                    android:id="@+id/tv_delivery_charge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:gravity="center_vertical"
                    android:minHeight="25dp"
                    android:text="Delivery Charge "
                    android:textSize="12sp"
                    android:textStyle="normal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#efeeee"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="@dimen/margin10"
                android:orientation="vertical">

                <RatingBar
                    android:id="@+id/ratingbar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:minHeight="@dimen/margin10"
                    android:numStars="5"
                    android:rating="3"
                    android:stepSize="1.0" />

                <com.mobtecnica.wafiapps.customViews.CustomButton
                    android:id="@+id/view_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/red_box"
                    android:drawableLeft="@drawable/view_menu_icon"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="View Menu"
                    android:textColor="@color/tw__composer_red"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>