<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_menu_frag"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_background"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_item"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <com.mobtecnica.wafiapps.customViews.CustomTextView

                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:gravity="center_vertical"
                    android:minHeight="40dp"
                    android:textColor="@color/textColor"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.mobtecnica.wafiapps.customViews.CustomTextView
                    android:id="@+id/tv_item_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:gravity="center_vertical"
                    android:minHeight="40dp"
                    android:textColor="@color/textColor"
                    android:textSize="12sp"

                    android:textStyle="normal" />

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e6e4e4" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/sv_items"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/llcart"
        android:layout_below="@id/ll_top"
        android:paddingLeft="@dimen/margin10"
        android:paddingRight="@dimen/margin10">

        <com.mobtecnica.wafiapps.customViews.NonScrollExpandableListView
            android:id="@+id/expandableListView_eats"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/pureWhite"
            android:divider="@color/pureWhite"
            android:dividerHeight="0.3dp"
            android:groupIndicator="@null" />
    </ScrollView>

    <LinearLayout
        android:id="@+id/llcart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin10"
        android:paddingLeft="@dimen/margin10"
        android:paddingRight="@dimen/margin10"

        >

        <com.mobtecnica.wafiapps.customViews.CustomTextView
            android:id="@+id/tv_price"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Price :"
            android:textColor="@color/textColor"
            android:textSize="14sp"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="@dimen/margin10"
            android:background="@drawable/box_border"
            android:minHeight="40dp"
            android:padding="10dp">

            <ImageView
                android:id="@+id/iv_plus"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/iv_minus"
                android:layout_marginEnd="17dp"
                android:layout_marginRight="17dp"
                android:src="@drawable/plus_image" />


            <com.mobtecnica.wafiapps.customViews.CustomTextView
                android:id="@+id/tv_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="1"
                android:textSize="20dp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/iv_minus"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp"
                android:src="@drawable/minus_image" />

        </RelativeLayout>

        <com.mobtecnica.wafiapps.customViews.CustomButton
            android:id="@+id/btn_add_to_cart"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#ff2c0b"
            android:text="Add to cart"
            android:textAllCaps="true"
            android:textColor="@color/pureWhite"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>