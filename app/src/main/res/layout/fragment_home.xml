<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:id="@+id/image_pager_layout" >
            <cn.trinea.android.view.autoscrollviewpager.AutoScrollViewPager
                android:id="@+id/image_pager"
                android:layout_width="match_parent"
                android:layout_height="140dp" />
            <android.support.design.widget.TabLayout
                android:id="@+id/tabDots"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabBackground="@drawable/dot_selector"
                app:tabGravity="center"
                app:tabIndicatorHeight="0dp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/image_pager_layout"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/pureWhite"
                android:orientation="vertical">

                <com.mobtecnica.wafiapps.customViews.CustomTextView
                    android:id="@+id/tv_categories_buy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="sans-serif"
                    android:padding="5dp"
                    android:text=""
                    android:textColor="@color/textColor"
                    android:textSize="15sp"
                    android:visibility="gone"
                    />



                <android.support.v7.widget.RecyclerView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#F2F3F5"
                    android:id="@+id/scroll_categories"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"

                android:background="@color/pureWhite"
                android:orientation="vertical">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/scroll_Ordernow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/ll_deals_of_week"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="3dp">

            </android.support.v7.widget.RecyclerView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <com.mobtecnica.wafiapps.customViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:text="Services"
                    android:textColor="@color/textColor"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <include layout="@layout/include_home_services" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <com.mobtecnica.wafiapps.customViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:id="@+id/featured_brands"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:text="@string/featured_brands"
                    android:textColor="@color/textColor"
                    />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerview_home_brands"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/pureWhite"
                    app:layoutManager="android.support.v7.widget.GridLayoutManager" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:id="@+id/cart_in_home"
                android:orientation="vertical"
                android:visibility="visible">

                <com.mobtecnica.wafiapps.customViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:layout_marginBottom="11dp"
                    android:paddingTop="6dp"
                    android:textSize="@dimen/medium"
                    android:id="@+id/items_in_cart"
                    android:text="@string/items_in_cart_home"
                    android:textColor="@color/textColor"
                    />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerview_items_in_cart"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="android.support.v7.widget.GridLayoutManager" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                >

                <LinearLayout
                    android:id="@+id/ll_special_items_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.v4.widget.ContentLoadingProgressBar
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        style="?android:attr/progressBarStyle"
                        android:layout_marginTop="50dp"
                        android:layout_marginBottom="50dp"
                        android:layout_gravity="center_horizontal"
                        android:visibility="visible"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</ScrollView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fbChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/salesiq_vector_chat"
        android:layout_margin="@dimen/materialize_baseline_grid"
        />
</RelativeLayout>