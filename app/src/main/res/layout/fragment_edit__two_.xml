<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_background"
    android:clickable="true">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.75"
        android:scaleType="centerCrop"
        android:src="@drawable/wafi_pattern" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:paddingLeft="20dp">

            <ImageButton
                android:id="@+id/back2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="30dp"
                android:background="@null"
                android:padding="20dp"
                android:src="@drawable/ic_arrow_back" />

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <com.mobtecnica.wafiapps.customViews.CustomTextView
                android:id="@+id/textview104"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello!"
                android:textColor="@color/black"
                android:textSize="33dp"
                android:textStyle="bold" />

            <com.mobtecnica.wafiapps.customViews.CustomTextView
                android:id="@+id/textview1050"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What's your Name?"
                android:textColor="@color/black"
                android:textSize="33dp" />

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />


            <android.support.design.widget.TextInputLayout
                fontPath="@string/font_path_gotham_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:hint="First Name"
                android:textColorHint="@color/textColor"
                app:hintAnimationEnabled="true">

                <com.mobtecnica.wafiapps.customViews.CustomEditText
                    android:id="@+id/editText1edit2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/edittext_background"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:inputType="textCapWords"
                    android:singleLine="true"

                    android:textSize="15sp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                fontPath="@string/font_path_gotham_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:hint="Last Name"
                android:textColorHint="@color/textColor"
                app:hintAnimationEnabled="true">

                <com.mobtecnica.wafiapps.customViews.CustomEditText
                    android:id="@+id/editText2edit2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/edittext_background"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:inputType="textCapWords"
                    android:singleLine="true"
                    android:textSize="15sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                fontPath="@string/font_path_gotham_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:hint="E-mail"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:textColorHint="@color/textColor"
                app:hintAnimationEnabled="true">

                <com.mobtecnica.wafiapps.customViews.CustomEditText
                    android:id="@+id/editText3edit2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/edittext_background"
                    android:inputType="textEmailAddress"
                    android:textSize="15sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                fontPath="@string/font_path_gotham_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:hint="Mobile Number"
                android:textColorHint="@color/textColor"
                app:hintAnimationEnabled="true">

                <com.mobtecnica.wafiapps.customViews.CustomEditText
                    android:id="@+id/editText4edit2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/edittext_background"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textSize="15sp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="bottom|right"
                android:paddingRight="10dp">

                <ImageButton
                    android:id="@+id/next_page2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom|right"
                    android:layout_margin="10dp"
                    android:background="@drawable/next_button"
                    android:src="@drawable/ic_next_page"
                    android:text=">"
                    android:textSize="30sp" />

            </LinearLayout>

        </LinearLayout>


    </ScrollView>


</FrameLayout>