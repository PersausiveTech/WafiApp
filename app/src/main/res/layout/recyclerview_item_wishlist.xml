<?xml version="1.0" encoding="utf-8"?>


    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/card_margin"
        android:layout_marginLeft="@dimen/card_margin"
        android:layout_marginRight="@dimen/card_margin"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardPreventCornerOverlap="false"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center"
            android:id="@+id/wishlist_layout"
            android:orientation="horizontal"
            android:padding="10dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp">

                <ImageView
                    android:id="@+id/iv_product_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="centerInside" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.mobtecnica.wafiapps.customViews.CustomTextView
                        android:id="@+id/product_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="9"
                        android:fontFamily="sans-serif"
                        android:maxLines="2"
                        android:lineSpacingExtra="2dp"
                        android:paddingBottom="8dp"
                        android:text="Samsung S7 Edge"
                        android:textAllCaps="true"
                        android:textColor="@color/textColor"
                        android:textSize="13sp"
                        android:textStyle="normal" />

                    <ImageView
                        android:id="@+id/iv_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:src="@drawable/delete_2" />
                </LinearLayout>

                <com.mobtecnica.wafiapps.customViews.CustomTextView
                    android:id="@+id/product_spec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="Samsung S7 edge -32 gb"
                    android:textColor="@color/textColor"
                    android:textSize="11sp" />

                <com.mobtecnica.wafiapps.customViews.CustomTextView
                    android:id="@+id/vendor_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="sans-serif"
                    android:text="Vendor : Wafi connect"
                    android:textColor="@color/textColor"
                    android:textSize="13sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <com.mobtecnica.wafiapps.customViews.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="15dp"
                        android:gravity="center"
                        android:text="Qty " />

                    <ImageView
                        android:id="@+id/iv_minus_"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="20dp"
                        android:minWidth="20dp"
                        android:padding="3dp"
                        android:src="@drawable/ic_remove_black_24dp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#e7e5e5" />

                    <com.mobtecnica.wafiapps.customViews.CustomEditText
                        android:id="@+id/et_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:cursorVisible="false"
                        android:enabled="false"
                        android:inputType="none"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:lines="1"
                        android:minHeight="20dp"
                        android:minWidth="20dp"
                        android:padding="3dp"
                        android:text="1"
                        android:textColor="@color/textColor"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#e7e5e5" />

                    <ImageView
                        android:id="@+id/iv_plus_"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="20dp"
                        android:minWidth="20dp"
                        android:padding="3dp"
                        android:src="@drawable/ic_add_black_24dp" />

                    <android.support.v4.widget.Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <com.mobtecnica.wafiapps.customViews.CustomTextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:layout_marginLeft="25dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
                        android:gravity="center_vertical"
                        android:minHeight="40dp"
                        android:text="BD 220.00"

                        android:textColor="@color/textColor"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:visibility="gone">

                    <com.mobtecnica.wafiapps.customViews.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Color "
                        android:textSize="13dp" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:minHeight="40dp"
                    android:orientation="horizontal"
                    android:paddingTop="5dp">


                    <com.mobtecnica.wafiapps.customViews.CustomButton
                        android:id="@+id/btn_Add_to_cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:background="@drawable/red_btn_login"
                        android:gravity="center"
                        android:minHeight="30dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:text="Add to cart"
                        android:textAllCaps="true"
                        android:textColor="@color/pureWhite"
                        android:textSize="11sp"
                        android:textStyle="bold" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

